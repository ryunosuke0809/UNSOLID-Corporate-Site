# ========================================
# UNSOLID Inc. Corporate Website
# Apache Configuration
# ========================================

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Remove .html extension from URLs
    # If someone requests a .html file, redirect to without extension
    RewriteCond %{THE_REQUEST} ^GET\ /(.*)\.html(\?|\ |$) [NC]
    RewriteRule ^(.*)\.html$ /$1 [R=301,L,NE]
    
    # Serve .html file when extension is omitted
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.*)$ $1.html [L]
    
    # Redirect root to Japanese by default
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule ^$ /jp/ [R=302,L]
</IfModule>

# ========================================
# Directory Index
# ========================================
DirectoryIndex index.html index.htm

# ========================================
# Language-specific redirects
# ========================================

# Redirect root to Japanese by default
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ /jp/ [R=302,L]

# ========================================
# Compression
# ========================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# ========================================
# Browser Caching
# ========================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # HTML
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ========================================
# Error Pages (Optional)
# ========================================
# ErrorDocument 404 /404.html
# ErrorDocument 500 /500.html

# ========================================
# Force HTTPS (if SSL is available)
# ========================================
# Uncomment these lines when SSL is configured
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ========================================
# Prevent Directory Browsing
# ========================================
Options -Indexes

# ========================================
# UTF-8 Encoding
# ========================================
AddDefaultCharset UTF-8
DefaultLanguage ja
